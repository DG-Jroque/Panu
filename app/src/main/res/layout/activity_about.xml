<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_about"
    tools:context="com.mycaker.panu.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/majo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maria José-Diseno Gráfico"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/keam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kevin Angel-Desarrollador"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/cvc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carlos Villanueva-Desarrollador"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/jgrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jose Roque-Desarrollador"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18sp"
                android:typeface="sans"/>

            <TextView
                android:id="@+id/aygl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yahir Garcia-Tester"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18sp"
                android:typeface="sans"/>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/app_bar_my_pets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_my_pets_drawer" />

</android.support.v4.widget.DrawerLayout>
